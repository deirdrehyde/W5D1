<h1><%=@sub.title%></h1>

<h3>Description</h3>
  <p><%= @sub.description %></p>
</br>
<%= link_to "Edit", edit_sub_url(@sub)%>
</br>
<%= link_to "Make new post", new_sub_post_url(@sub)%>
</br>
</br>

<fieldset>
  <legend><h2>Posts</h2></legend>
  <ul>
    <% @sub.posts.each do |post| %>
      <li><h3><%= link_to post.title, post_url(post) %></h3></li>
    <% end %>
  </ul>
</fieldset>
